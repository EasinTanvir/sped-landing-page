
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model HeroBanner {
   id   String   @id @default(auto()) @map("_id") @db.ObjectId
  title Json
  description Json
  items Json
  buttonOneText Json
  buttonTwoText Json
}
model BrandSetting {
   id   String   @id @default(auto()) @map("_id") @db.ObjectId
  brandTitle Json
  footerText Json
  brandLogo String?

}
